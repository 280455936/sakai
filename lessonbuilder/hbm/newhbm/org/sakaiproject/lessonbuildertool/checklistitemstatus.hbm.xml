<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.sakaiproject.lessonbuildertool.ChecklistItemStatusImpl" table="lesson_builder_ch_status">

        <cache usage="nonstrict-read-write" />

        <composite-id>
            <key-property name="checklistId"/>
            <key-property name="checklistItemId"/>
            <key-property name="owner"/>
        </composite-id>

        <property name="done" type="boolean" />

    </class>
</hibernate-mapping>